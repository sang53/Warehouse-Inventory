<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Warehouse Inventory</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <%- include ("partials/header.ejs") %>
    <div>
      <%- include ("partials/search.ejs") %>
      <%- include ("partials/addBtn.ejs") %>
    </div>
    <div class="flex-column-center">
      <div class="options">
        <form action="/tasks/id/<%= t_id %>" method="post">
          <label for="u_id">User ID:</label>
          <input type="number" name="u_id" id="u_id" autofocus placeholder="Self">
          <button type="submit">Set Complete (admin only)</button>
        </form>
      </div>
      <div class="table-container">
        <% tables.forEach(({title, tableData}) => { %>
          <div class="table">
            <h1 class="table-title"><%= title %></h1>
            <%- include("partials/table.ejs", { tableData }) %>
          </div>
        <% }) %>
      </div>
    </div>
    <%- include("partials/footer.ejs") %> 
  </body>
</html>
