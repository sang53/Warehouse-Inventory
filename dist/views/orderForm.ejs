<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Add New Order</title>
    <link rel="stylesheet" href="/css/base.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <div class="flex-column-center">
      <h1>Add New Order</h1>
      <form action="/orders/new" method="post" class="flex-column-center">
        <fieldset>
          <legend>Order Type</legend>
          <label>
            <input type="radio" name="o_type" value="IN" required />
            Incoming
          </label>
          <label>
            <input type="radio" name="o_type" value="OUT" required />
            Outgoing
          </label>
        </fieldset>
        <div id="productInputs"></div>
        <button type="button" id="addProductBtn">Add another product</button>
        <button type="submit">Submit</button>
      </form>
    </div>
    <%- include("partials/orderFormScript.ejs") %> <%-
    include("partials/footer.ejs") %>
  </body>
</html>
